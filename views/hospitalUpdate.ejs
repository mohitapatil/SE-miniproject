
<form action="/hospital/<%= hospital._id %>?_method=PUT" method="POST">
	<div class="form-group">
	<input class="form-control" type="text" placeholder="name" name="hospital[username]" value="<%=hospital.username %>">
	</div>
	<div class="form-group">
			<input class="form-control" type="number" name="hospital[totalBeds]" value="<%=hospital.totalBeds %>"  min ="1" step= "1">
    </div>
    <div class="form-group">
        <input class="form-control" type="number" name="hospital[availableBeds]" value="<%=hospital.availableBeds %>"  min ="1" step= "1">
    </div>
	<div class="form-group">
	<input class="form-control" type="text" name="hospital[address]" value="<%=hospital.address %>">
	</div>
    <div class="form-group row" style="padding: 0% 5% 0% 5%;display: flex; flex-wrap: wrap ;">
        <p>Doctors</p>
        <% hospital.Doctors.forEach(function(doctor){ %>
                <div >
                    <ul>
                        <li>
                            <input class="form-control" type="text" name="hospital[Doctors]" value="<%= doctor %>">                            
                        </li>
                    </ul>
                </div>
        <% }); %>
    </div>

	<div class="form-group">
	<button class="btn btn-lg btn-default " >
		Submit
	</button>
	</div>
</form>