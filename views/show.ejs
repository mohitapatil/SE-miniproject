
<h1>
    <%= hospital.username %>
</h1>

<p>
    <%= hospital.totalBeds %>
</p>

<p>
    <%= hospital.availableBeds %>
</p>
<p>
    <%= hospital.address %>
</p>

<div class="row" style="padding: 0% 5% 0% 5%;display: flex; flex-wrap: wrap ;">
    <p>Doctors</p>
    <% hospital.Doctors.forEach(function(doctor){ %>
            <div >
                <ul>
                    <li>
                        <h3>
                            <%= doctor %>
                        </h3>
                    </li>
                </ul>
            </div>
    
    <% }); %>

</div>
<% if(currentUser && hospital.id == currentUser._id) { %>
    <a href="/hospital/<%= hospital._id %>/edit">Edit</a>
    <% } %>